<p id="notice"><%= notice %></p>

<h1><%= t(:listingChampionships) %></h1>

<table>
  <thead>
    <tr>
      <th><%= t(:name) %></th>
      <th><%= t(:start) %></th>
      <th><%= t(:end) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @championships.each do |championship| %>
      <tr>
        <td><%= championship.name %></td>
        <td><%= l(championship.start) %></td>
        <td><%= l(championship.end) %></td>
        <td><%= link_to t(:show), championship %></td>
        <td><%= link_to t(:edit), edit_championship_path(championship) %></td>
        <td><%= link_to t(:destroy), championship, method: :delete, data: { confirm: t(:confirmMessage) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


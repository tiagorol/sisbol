<%= bootstrap_form_for @championship, :html => { :class => "form-horizontal championship" } do |f| %>

    <% if @championship.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@championship.errors.count, t(:error)) %> <%= t :warn_save %> </h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @championship.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="panel panel-default">
    <div class="panel-heading">
      Preencha os campos abaixo
    </div><br/>

      <div class="control-group">
        <div class="controls">
          <%= f.text_field :name, :class => 'form-control' %>
        </div>
        <%= error_span(@championship[:name]) %>
      </div>
      <div class="control-group">
        <div class="controls">
          <%= f.date_field :start, :class => 'form-control' %>
        </div>
        <%= error_span(@championship[:start]) %>
      </div>
      <div class="control-group">
        <div class="controls">
          <%= f.date_field :end, :class => 'form-control' %>
        </div>
        <%= error_span(@championship[:end]) %>
      </div>


      <%= f.submit nil, :class => 'btn btn-primary square-btn-adjust' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")), championships_path, :class => 'btn btn-default square-btn-adjust' %>

     <br/>
     <br/>
  </div>
<% end %>

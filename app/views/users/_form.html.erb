<%= bootstrap_form_for @user, :html => { :class => "form-horizontal user", :multipart => true } do |f| %>

    <% if @user.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@user.errors.count, t(:error) ) %> <%= t :warnSave %></h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

 <div class="panel panel-default">
   <div class="panel-heading">
     <%= t :panel_form %>
  </div><br/>

      <div class="control-group">
        <div class="controls">
          <%= f.text_field :name, :class => 'form-control' %>
        </div>
        <%= error_span(@user[:name]) %>
      </div>
      <div class="control-group">
        <div class="controls">
          <%= f.text_field :surname, :class => 'form-control' %>
        </div>
        <%= error_span(@user[:surname]) %>
      </div>
      <div class="control-group">
        <div class="controls">
          <%= f.date_field :date_of_birth, :class => 'form-control' %>
        </div>
        <%= error_span(@user[:date_of_birth]) %>
      </div>
      <div class="control-group">
        <div class="controls">
          <%= f.email_field :email, :class => 'form-control' %>
        </div>
        <%= error_span(@user[:email]) %>
      </div>
      <div class="control-group">
        <div class="controls">
          <%= f.password_field :password, :class => 'form-control' %>
        </div>
        <%= error_span(@user[:password]) %>
      </div>
      <div class="control-group">
        <div class="controls">
          <%= f.password_field :password_confirmation, :class => 'form-control' %>
        </div>
        <%= error_span(@user[:password_confirmation]) %>
      </div>
      <div class="control-group">
        <div class="controls">
          <%= f.file_field :avatar, :class => 'form-control' %>
        </div>
        <%= error_span(@user[:avatar]) %>
      </div>

      <%= f.submit nil, :class => 'btn btn-primary square-btn-adjust' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn btn-grey square-btn-adjust' %>

     <br/>
     <br/>
   </div>

<% end %>

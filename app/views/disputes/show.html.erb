<%- model_class = Dispute -%>

<h2><%=t '.title', :default => model_class.model_name.human.titleize %></h2>
<hr />

<% if flash[:notice] %>
    <div class="alert alert-info">
      <% flash.each do |name, msg| -%>
          <%= msg %>
      <% end %>
    </div>
<% end %>

<% if flash[:alert] %>
    <div class="alert alert-danger">
      <% flash.each do |name, msg| -%>
          <%= msg %>
      <% end %>
    </div>
<% end %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @dispute.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:championship_id) %>:</strong></dt>
  <dd><%= @dispute.championship.name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
            disputes_path, :class => 'btn btn-grey square-btn-adjust'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_dispute_path(@dispute), :class => 'btn btn-grey square-btn-adjust' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            dispute_path(@dispute),
            :method => 'delete',
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
            :class => 'btn btn-danger square-btn-adjust' %>

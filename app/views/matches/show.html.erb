<%- model_class = Match -%>

<h2><%=t '.title', :default => model_class.model_name.human.titleize %></h2>
<hr />

<% if flash[:notice] %>
    <div class="alert alert-info">
      <% flash.each do |name, msg| -%>
          <%= msg %>
      <% end %>
    </div>
<% end %>

<% if flash[:alert] %>
    <div class="alert alert-danger">
      <% flash.each do |name, msg| -%>
          <%= msg %>
      <% end %>
    </div>
<% end %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:championship) %>:</strong></dt>
  <dd><%= @match.championship.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:round) %>:</strong></dt>
  <dd><%= @match.round.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:home_team) %>:</strong></dt>
  <dd><%= @match.home_team.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:away_team) %>:</strong></dt>
  <dd><%= @match.away_team.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:goals_home_team) %>:</strong></dt>
  <dd><%= @match.goals_home_team %></dd>
  <dt><strong><%= model_class.human_attribute_name(:goals_away_team) %>:</strong></dt>
  <dd><%= @match.goals_away_team %></dd>
  <dt><strong><%= model_class.human_attribute_name(:day_of_match) %>:</strong></dt>
  <dd><%= l @match.day_of_match %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
            matches_path, :class => 'btn btn-grey square-btn-adjust'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_match_path(@match), :class => 'btn btn-grey square-btn-adjust' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            match_path(@match),
            :method => 'delete',
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
            :class => 'btn btn-danger square-btn-adjust' %>